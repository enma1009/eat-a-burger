        <input type="text" class="form-control" placeholder="Enter the name of a burger you want to eat" aria-label="Enter the name of a burger you want to eat" aria-describedby="button-addon2" id="burger_input">
        <div class="input-group-append">
            <button class="btn btn-danger" type="button" id="submit_burger">Submit</button>
        </div>
    </div>
    <div class="row">
